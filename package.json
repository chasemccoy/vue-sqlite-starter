{
	"name": "enchiridion",
	"version": "0.1.0",
	"description": "",
	"type": "module",
	"keywords": [],
	"author": "Chase McCoy",
	"license": "MIT",
	"scripts": {
		"lint": "prettier --write . && eslint . --fix && vue-tsc --noEmit",
		"dev:app": "vite --host",
		"dev:backend": "tsx watch backend/api/index.ts",
		"health-check": "tsx scripts/health-check.ts",
		"dev": "pnpm run health-check && concurrently \"pnpm run dev:app\" \"pnpm run dev:backend\"",
		"build": "vue-tsc -b && vite build",
		"preview": "vite preview",
		"db:push": "drizzle-kit push",
		"db:pull": "drizzle-kit push",
		"db:migrate": "pnpm drizzle-kit migrate",
		"db:generate": "pnpm drizzle-kit generate",
		"db:studio": "drizzle-kit studio",
		"db:seed": "tsx backend/db/seed.ts",
		"db:clean": "rm -f enchiridion.db enchiridion.db-shm enchiridion.db-wal",
		"db:reset": "pnpm db:clean && pnpm db:push && pnpm db:seed",
		"db:check": "sqlite3 enchiridion.db 'PRAGMA integrity_check;'",
		"db:backup": "tsx scripts/backup-database.ts",
	},
	"dependencies": {
		"@nuxt/ui": "^3.1.3",
		"@tanstack/vue-query": "^5.80.6",
		"@types/multer": "^1.4.13",
		"@unhead/vue": "^2.0.10",
		"@vueuse/core": "^13.3.0",
		"better-sqlite3": "^12.1.0",
		"cors": "^2.8.5",
		"drizzle-orm": "1.0.0-beta.1-c0277c0",
		"drizzle-zod": "^0.8.2",
		"express": "^5.1.0",
		"multer": "^2.0.1",
		"sharp": "^0.34.2",
		"slugify": "^1.6.6",
		"tailwindcss": "^4.1.8",
		"trash": "^9.0.0",
		"vue": "^3.5.13",
		"vue-router": "4",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@eslint/js": "^9.28.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/express": "^5.0.2",
		"@types/node": "^22.15.31",
		"@vitejs/plugin-vue": "^5.2.3",
		"@vue/tsconfig": "^0.7.0",
		"concurrently": "^9.1.2",
		"dotenv": "^16.5.0",
		"drizzle-kit": "1.0.0-beta.1-c0277c0",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-vue": "^10.1.0",
		"globals": "^16.2.0",
		"prettier": "^3.5.3",
		"tsx": "^4.19.4",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.33.1",
		"vite": "^7.0.0",
		"vue-tsc": "^2.2.8"
	}
}